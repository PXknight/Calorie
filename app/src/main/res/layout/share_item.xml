<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="4dp">
    <RelativeLayout
        android:id="@+id/rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/im1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:layout_marginLeft="36dp"
            android:layout_toStartOf="@+id/share_title"
            android:background="@drawable/ic_action_note"
            android:padding="12dp"
            android:paddingLeft="32dp"
            android:layout_marginRight="12dp"
            android:layout_toLeftOf="@+id/share_title" />

        <TextView
            android:id="@+id/share_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/share_context"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:maxLines="5"
            android:padding="8dp"
            android:text="google"
            android:textColor="#c4000000"
            android:textSize="16sp"
            android:layout_alignLeft="@+id/share_context" />

        <TextView
            android:id="@+id/share_context"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/share_title"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="72dp"
            android:padding="8dp"
            android:text="hello_world"
            android:textColor="#89000000"
            android:textSize="12sp"
            android:layout_alignParentLeft="true" />
    </RelativeLayout>



</android.support.v7.widget.CardView>